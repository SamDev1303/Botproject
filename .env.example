# Bella AI Assistant - Environment Variables Template
# Copy this file to ~/.clawdbot/.env and fill in your actual values

# =============================================================================
# GOOGLE SERVICES
# =============================================================================
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REFRESH_TOKEN=your_google_refresh_token_here
GOOGLE_PROJECT_ID=your_google_project_id_here
GOOGLE_SHEETS_ID=your_google_sheets_id_here
GOOGLE_SERVICE_ACCOUNT_EMAIL=your_service_account_email_here

# =============================================================================
# META PLATFORMS (Facebook, Instagram, WhatsApp, Messenger)
# =============================================================================
META_APP_ID=your_meta_app_id_here
META_APP_SECRET=your_meta_app_secret_here
META_BUSINESS_ID=your_meta_business_id_here
META_SYSTEM_USER_TOKEN=your_meta_system_user_token_here
WHATSAPP_BUSINESS_ACCOUNT_ID=your_whatsapp_business_account_id_here
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id_here

# =============================================================================
# TWILIO (SMS & Voice Calls)
# =============================================================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# =============================================================================
# SQUARE (Payments & Invoicing)
# =============================================================================
SQUARE_ACCESS_TOKEN=your_square_access_token_here
SQUARE_APPLICATION_ID=your_square_application_id_here
SQUARE_ENVIRONMENT=production

# =============================================================================
# TELEGRAM
# =============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_USERNAME=@YourBotUsername

# =============================================================================
# CLAWDBOT GATEWAY
# =============================================================================
CLAWDBOT_GATEWAY_TOKEN=your_clawdbot_gateway_token_here
CLAWDBOT_GATEWAY_URL=http://localhost:18789

# =============================================================================
# AI SERVICES
# =============================================================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here  # Free models for chunking/summarization
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# =============================================================================
# CONVEX (Real-time Database for Memory Management)
# =============================================================================
CONVEX_DEPLOY_KEY=your_convex_deploy_key_here
CONVEX_TEAM_ID=your_convex_team_id_here
CONVEX_URL=your_convex_deployment_url_here  # e.g., https://your-project.convex.cloud

# =============================================================================
# OTHER SERVICES
# =============================================================================
BRAVE_API_KEY=your_brave_search_api_key_here
APIFY_API_KEY=your_apify_api_key_here
N8N_URL=your_n8n_url_here
N8N_API_KEY=your_n8n_api_key_here

# =============================================================================
# CLEAN UP BROS BUSINESS DETAILS
# =============================================================================
BUSINESS_PHONE=your_business_phone_here
BUSINESS_PHONE_INTL=your_business_phone_international_format_here
BUSINESS_WEBSITE=your_business_website_here
BANK_NAME=your_bank_account_name_here
BANK_BSB=your_bank_bsb_here
BANK_ACCOUNT=your_bank_account_number_here
HAFSAH_PHONE=your_personal_phone_here

# =============================================================================
# GMAIL
# =============================================================================
GMAIL_APP_PASSWORD=your_gmail_app_password_here
GMAIL_ADDRESS=your_gmail_address_here

# =============================================================================
# GITHUB (Optional)
# =============================================================================
GITHUB_SSH_KEY_FINGERPRINT=your_github_ssh_key_fingerprint_here
GITHUB_KEY_NAME=your_github_key_name_here

# =============================================================================
# AWS (Optional)
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=your_aws_region_here
